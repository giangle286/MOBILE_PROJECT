<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_search_details"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="670dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imv_searchhinh"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/img_nt1" />

            <TextView
                android:id="@+id/txt_searchten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/sourcesanspro_bold"
                android:text="Căn hộ cho thuê quận 11"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/ic_baseline_attach_money_24" />

                    <TextView
                        android:id="@+id/txt_search"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="5 triệu/ tháng"
                        android:textColor="#3E1A0A"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/imv_chat_shroom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:background="@drawable/ic_baseline_chat_bubble_outline_24"
                            android:layout_marginRight="8dp"/>
                        <CheckBox
                            android:id="@+id/btn_like_shroom"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:scaleX="0.5"
                            android:layout_marginRight="8dp"
                            android:button="@null"
                            android:background="@drawable/selector_tym"
                            android:checked="false"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_baseline_save_alt_24"
                            android:id="@+id/imv_save"
                            android:scaleX="1.5"
                            android:scaleY="1.5"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/ic_home_black_24dp" />

                    <TextView
                        android:id="@+id/txt_square"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:text="20m2"
                        android:textColor="#3E1A0A"
                        android:textSize="20sp" />

                    <LinearLayout android:layout_width="match_parent"     android:layout_height="match_parent"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imv_call" android:layout_width="wrap_content"
                            android:scaleY="0.7"
                            android:scaleX="0.7" android:layout_height="match_parent" android:src="@drawable/img_phone" />

                        <Button android:id="@+id/btn_phone_number_room" style="?android:attr/borderlessButtonStyle" android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:text="0332204584"
                            android:textColor="#993B22" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content" android:layout_height="match_parent"
                        android:layout_marginRight="3dp" android:src="@drawable/ic_baseline_people_alt_24" />

                    <TextView
                        android:id="@+id/txt_numberPeople_room" android:layout_width="wrap_content" android:layout_height="match_parent"
                        android:text="3 người"
                        android:layout_marginTop="5dp"
                        android:textColor="#3E1A0A"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imv_userRoom"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_baseline_account_circle_24" />

                        <Button
                            android:id="@+id/btn_ownRoom"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nhà trọ Kiệt"
                            android:textColor="#993B22"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/ic_baseline_location_on_24" />

                    <TextView
                        android:id="@+id/txt_address"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Võ Văn Tần, Quận 11"
                        android:textColor="#3E1A0A"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/Base.CardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Thông tin chi tiết"
                android:textColor="#993E22"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <TextView
                android:id="@+id/txt_Motatro"
                android:layout_width="wrap_content"
                android:layout_height="298dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:lineSpacingExtra="8sp"
                android:text="Được trang bị:
+ 2 phòng ngủ, 1 toilet
+ Ban công view Landmark 81
+ Máy lạnh, quạt
+ Tủ lạnh
+ Máy giặc
+ Điện, nước, wifi, chỗ để xe tính theo tháng
+ WC riêng biệt trong phòng
+ Camera Và Khoá Vân tay phòng riêng và cổng nhà xe an toàn.
+ Giờ giấc tự do
Hợp đồng 6-12 tháng

"
                android:textColor="#373737" />

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:src="@drawable/img_ava" />/>

        <EditText
            android:id="@+id/edt_cmt_shroom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:background="@drawable/edittext_button_style_rounded"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="Mời nhập bình luận"
            android:textColor="#B0B1B6"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <Button
            android:id="@+id/btn_cmt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:background="@drawable/edittext_button_style_rounded"
            android:text="Đăng"
            android:layout_marginLeft="6dp"/>

    </LinearLayout>

</LinearLayout>
