<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Decor_Details"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <ImageButton
            android:id="@+id/imb_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#FFFFFF"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thiết kế"
            android:textSize="25dp"
            android:padding="10dp"
            android:textColor="#993B22"
            android:textStyle="bold"
            android:gravity="top"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">
<!--        <androidx.viewpager.widget.ViewPager-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="250dp"-->
<!--            android:id="@+id/decor_viewpager"/>-->
        <ImageView
            android:id="@+id/img_DecoDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/sample1"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>
<!--    <me.relex.circleindicator.CircleIndicator-->
<!--        android:id="@+id/deco_circle_indicator"-->
<!--        app:ci_drawable="@drawable/bg_indicator"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_gravity="center_horizontal"-->
<!--        android:layout_height="30dp" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:orientation="horizontal"
        android:weightSum="10">
        <TextView
            android:id="@+id/txt_NameDecorDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Deco tối giản"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_weight="8"/>
        <ImageView
            android:id="@+id/imv_Favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_baseline_favorite_border_24" />

        <ImageView
            android:id="@+id/imv_Downloads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="0.5"
            app:srcCompat="@drawable/ic_baseline_arrow_circle_down_24" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:src="@drawable/deco_user" />
        <TextView
            android:id="@+id/txt_UserDecorDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhật Vy"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:padding="10dp"
            android:gravity="top"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/txt_TimeDecorDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 phút"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:padding="10dp"
            android:gravity="top"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

</LinearLayout>