<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Decor_Details"
    android:orientation="vertical"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageButton
                android:id="@+id/btn_Roomatesback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:padding="5dp"
                android:src="@drawable/ic_back"></ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:text="Tìm người ở ghép"
                android:textColor="#993B22"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>


        </LinearLayout>

        <ImageView
            android:id="@+id/imv_ImageRoomatesDetails"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="4"></ImageView>

        <TextView
            android:id="@+id/txt_TitleRoomatesDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:text="Tiêu đề"
            android:textColor="#993B22"
            android:textSize="22sp"
            android:textStyle="bold"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_CommentRoomatesDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:padding="2dp"
                app:srcCompat="@drawable/ic_baseline_chat_bubble_outline_24" />

            <ImageView
                android:id="@+id/imv_FavoriteRoomatesDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:padding="2dp"
                app:srcCompat="@drawable/ic_baseline_favorite_border_24" />

            <ImageView
                android:id="@+id/imv_DownloadsRoomatesDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="2dp"
                app:srcCompat="@drawable/ic_baseline_arrow_circle_down_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/ic_square"></ImageView>

            <TextView
                android:id="@+id/txt_GenderRoomatesDetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Giới tính"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp">

            <TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:src="@drawable/ic_square"></ImageView>

                    <TextView
                        android:id="@+id/txt_SquareRoomatesDetails"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Diện tích"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:src="@drawable/ic_phone"></ImageView>

                    <TextView
                        android:id="@+id/txt_PhoneRoomatesDetails"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="SĐT"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>
            </TableRow>

            <TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="5dp"

                        android:src="@drawable/ic_nob"></ImageView>

                    <TextView
                        android:id="@+id/txt_NOBRoomatesDetails"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="số người"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:src="@drawable/ic_name"></ImageView>

                    <TextView
                        android:id="@+id/txt_NameRoomatesDetails"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Người đăng bài"
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                </LinearLayout>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/ic_address"></ImageView>

            <TextView
                android:id="@+id/txt_AddressRoomatesDetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Địa chỉ"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/stroke">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mô tả:"
                android:textColor="#993E22"
                android:textStyle="bold"

                android:layout_marginVertical="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Một mẫu trang trí phòng sang xịn hợp thời theo phong cách hiện đại của mình cho các bạn tham khảo. Đừng quên cho mình xem căn phòng của bạn nhé! "
                android:id="@+id/txt_DescribeRoomatesDetails"
                android:layout_marginBottom="3dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="8">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/avatar_cmt"
                android:layout_marginTop="6dp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/edt_CmtRoomatesDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke"
                android:hint="Bình luận gì đó"
                android:layout_margin="4dp"
                android:layout_weight="7"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imv_SendCmtRoomatesDetails"
                android:src="@drawable/ic_baseline_send_24"
                android:layout_weight="1"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

    </LinearLayout>
    <ListView
        android:id="@+id/lvCmtRoomatesDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>






</LinearLayout>