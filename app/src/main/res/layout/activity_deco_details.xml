<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:padding="5dp">
    <ImageButton
        android:id="@+id/imb_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        android:src="@drawable/ic_baseline_arrow_back_ios_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thiết kế"
        android:textSize="25dp"
        android:padding="10dp"
        android:textColor="#993B22"
        android:textStyle="bold"
        android:gravity="top"/>
  </LinearLayout>
  <androidx.cardview.widget.CardView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:cardCornerRadius="15dp">
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="250dp"
      android:id="@+id/deco_viewpager"/>

  </androidx.cardview.widget.CardView>
  <me.relex.circleindicator.CircleIndicator
      android:id="@+id/deco_circle_indicator"
      app:ci_drawable="@drawable/bg_indicator"
      android:layout_width="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_height="30dp" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="3dp"
      android:orientation="horizontal"
      android:weightSum="10">
    <TextView
        android:id="@+id/txt_NameDecoDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Deco tối giản"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_weight="8"/>
    <ImageView
        android:id="@+id/imv_Favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_baseline_favorite_border_24" />

    <ImageView
        android:id="@+id/imv_Downloads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_weight="0.5"
        app:srcCompat="@drawable/ic_baseline_arrow_circle_down_24" />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:padding="5dp">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:src="@drawable/deco_user" />
    <TextView
        android:id="@+id/txt_UserDecoDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhật Vy"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:padding="10dp"
        android:gravity="top"
        android:layout_marginLeft="10dp"/>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="7dp"
      android:layout_marginHorizontal="10dp"
      android:background="@drawable/stroke">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mô tả:"
        android:textColor="#993E22"
        android:textStyle="bold"

        android:layout_marginVertical="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Một mẫu trang trí phòng sang xịn hợp thời theo phong cách hiện đại của mình cho các bạn tham khảo. Đừng quên cho mình xem căn phòng của bạn nhé! "

        android:layout_marginBottom="3dp"
         />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="2dp"
      android:orientation="horizontal"
      android:layout_marginHorizontal="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/stroke"
        android:gravity="left"
        android:text="#PhongXinh"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/stroke"
        android:gravity="left"
        android:text="#Tối giản"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/stroke"
        android:gravity="left"
        android:text="#MauDecoDep"
        android:layout_marginLeft="10dp"/>


  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
      android:weightSum="8">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/avatar_cmt"
        android:layout_marginTop="6dp"
        android:layout_weight="1"/>

    <EditText
        android:id="@+id/edt_Cmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/stroke"
        android:hint="Bình luận gì đó"
        android:layout_margin="4dp"
        android:layout_weight="7"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imv_SendCmt"
        android:src="@drawable/ic_baseline_send_24"
        android:layout_weight="1"
        android:layout_marginTop="10dp"/>
  </LinearLayout>

  <ListView
      android:id="@+id/lvCmt"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>


</LinearLayout>







