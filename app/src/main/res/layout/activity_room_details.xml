<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Room_Details"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imv_blogDetails"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:scaleType="centerCrop"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sample1" />

    <TextView
        android:id="@+id/txt_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Căn hộ cho thuê quận 11"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_attach_money_24"/>
            <TextView
                android:id="@+id/txt_price_room"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="3,5 triệu/ tháng"
                android:textSize="20sp"
                android:textColor="#3E1A0A"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:src="@drawable/ic_baseline_chat_bubble_outline_24"
                android:id="@+id/imv_chat"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_favorite_border_24"
                android:id="@+id/imv_favorite"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_save_alt_24"
                android:id="@+id/imv_save"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home_black_24dp"/>
            <TextView
                android:id="@+id/txt_square_metre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="20m2"
                android:textSize="20sp"
                android:textColor="#3E1A0A"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:src="@drawable/img_phone"
                android:id="@+id/imv_call"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_phone_number"
                android:text="0332204584"
                android:textColor="#993B22"

                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="11 giờ trước | bởi Nhà trọ 111"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:textColor="#373737"
        android:id="@+id/txt_Desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:lineSpacingExtra="8sp"
        android:text="Tùy theo nhu cầu thuê trọ của mỗi người, để đánh giá được một phòng trọ có chất lượng tốt hay không thì phải dựa trên nhiều tiêu chí khác nhau. Trong bài viết này, Moro sẽ nêu ra 6 tiêu chí quan trọng để đánh giá chất lượng của một căn phòng trọ, các bạn trong quá trình đi tìm thuê nhà trọ có thể xem tham khảo và áp dụng để chọn lọc thuê cho mình một căn phòng trọ tốt, phù hợp với nhu cầu bản thân." />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày sinh:"
                    android:textSize="12sp"
                    android:textColor="#A0A0A0"/>
                <TextView
                    android:id="@+id/txtNgaySinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13/01/1992"
                    android:layout_marginStart="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giới tính:"
                        android:textSize="12sp"
                        android:textColor="#A0A0A0"/>
                    <TextView
                        android:id="@+id/txtGioiTinh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nam"
                        android:layout_marginStart="5dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại:"
                    android:textSize="12sp"
                    android:textColor="#A0A0A0"/>
                <TextView
                    android:id="@+id/txtSoDT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0911568867"
                    android:layout_marginStart="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_notifications_black_24dp"
                android:padding="10dp">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Thành tích"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:drawableLeft="@drawable/ic_baseline_filter_alt_24"/>
                <TextView
                    android:id="@+id/txtThanhTich"
                    android:layout_marginTop="10dp"
                    android:layout_width="330dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Thanh tich"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:gravity="left"
                    android:padding="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:padding="10dp">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="330dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Các lớp học đang mở"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="5dp"/>
                <ListView
                    android:id="@+id/lvDangMo"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:padding="10dp">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="330dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Đánh giá"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="5dp"/>
                <ListView
                    android:id="@+id/lvDanhGia"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>