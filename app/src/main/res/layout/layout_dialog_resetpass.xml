<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:src="@drawable/img_logo"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/img_rec"
        android:padding="40dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="#FADCBD">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/img_email"
                android:layout_gravity="center">
            </ImageView>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtEmailMk"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Email"
                ></com.google.android.material.textfield.TextInputEditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="#FADCBD"
            android:layout_margin="20dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/img_key"></ImageView>


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtMk"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingTop="8dp"
                android:hint="Mật khẩu mới"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="#FADCBD">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/img_key"></ImageView>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtReMk"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:hint="Nhập lại mật khẩu"
                android:paddingTop="8dp"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btn_rePass"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Đổi mật khẩu"
            android:textSize="20dp"
            android:backgroundTint="#C6803801"
            android:layout_margin="40sp"
            >
        </Button>



    </LinearLayout>

</LinearLayout>