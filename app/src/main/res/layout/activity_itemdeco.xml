<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imb_ThumbDeco"
                android:backgroundTint="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/sample1"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/imb_ThumbDeco1"
                android:backgroundTint="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/sample2"
                android:layout_weight="2"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/txt_NameDeco1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#912A2A"
                android:padding="5dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txtName_Deco1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#1B7A1F"
                android:padding="5dp"/>

        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/txt_UserDeco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#912A2A"
                android:padding="5dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_UserDeco1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#1B7A1F"
                android:padding="5dp"/>

        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/txt_TimeDeco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="#912A2A"
                android:padding="5dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txt_TimeDeco1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="#1B7A1F"
                android:padding="5dp"/>

        </TableRow>

    </TableLayout>
</LinearLayout>