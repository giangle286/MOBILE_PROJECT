<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Login"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:src="@drawable/img_logo"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/img_rec"
        android:padding="30dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="#FADCBD"
            android:layout_marginTop="50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/img_email"
                android:layout_gravity="center">
            </ImageView>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtEmail"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:inputType="textEmailAddress"
                android:paddingTop="8dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:hint="Email đăng nhập"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="#FADCBD"
            android:layout_margin="20dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/img_key"></ImageView>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPass"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:paddingTop="8dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:hint="Mật khẩu"/>

        </LinearLayout>
        <CheckBox
            android:id="@+id/chkRemember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Ghi nhớ cho các lần đăng nhập sau"
            android:textColor="@color/black"
            android:textSize="15sp"
            />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Đăng nhập"
            android:textSize="20dp"
            android:backgroundTint="#C6803801"
            >
        </Button>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/txtForgotPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quên mật khẩu?" style="?android:attr/borderlessButtonStyle"
                android:textAlignment="center"
                android:paddingRight="30dp"
                android:textColor="@color/black"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/txtRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:text="Đăng ký"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/black"
                android:paddingLeft="30dp"
                android:textAlignment="center"
                android:textStyle="bold">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearSocial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

        <FrameLayout
            android:id="@+id/GG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/img_gg"
            android:layout_marginRight="40dp"
            >
            <com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/FB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_fb"
            android:layout_marginLeft="40dp">

            <com.facebook.login.widget.LoginButton
                android:id="@+id/btnFb"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:visibility="gone" />
        </FrameLayout>
        </LinearLayout>

        </LinearLayout>

</LinearLayout>