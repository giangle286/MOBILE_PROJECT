<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Login"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/img_logo"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/img_email"
                android:layout_gravity="center">
            </ImageView>
            <EditText
                android:id="@+id/edt_email"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Email hoặc SĐT"
                ></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/img_key"></ImageView>
            <EditText
                android:id="@+id/edt_password"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Mật khẩu"
                android:inputType="textPassword"
                android:paddingTop="20dp"
                ></EditText>
        </LinearLayout>

        <Button
            android:id="@+id/btn_dangNhap"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Đăng nhập"
            android:textSize="20dp"
            android:backgroundTint="#C6803801"
            >
        </Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_QuenMk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:text="Quên mật khẩu?"
                android:textColor="@color/cardview_dark_background"
                android:textAlignment="center"
                android:textStyle="bold"
                >
            </Button>

            <Button
                android:id="@+id/btn_dangKy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:text="Đăng ký"
                android:textColor="@color/cardview_dark_background"
                android:textAlignment="center"
                android:textStyle="bold">
            </Button>
        </LinearLayout>

        <Button
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Đăng nhập với Facebook"
            android:textColor="@color/black"
            android:backgroundTint="#FADCBD">
        </Button>

        <Button
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Đăng nhập với Google"
            android:textColor="@color/black"
            android:backgroundTint="#FADCBD">
        </Button>

    </LinearLayout>




</LinearLayout>