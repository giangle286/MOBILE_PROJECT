<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="10dp"
    android:background="@drawable/stroke">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_Shareroom"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample1"/>
        <TextView
            android:id="@+id/txt_sr_tenshareroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Nhà trọ Thủ Đức"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_sr_gia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="2 triệu/tháng"/>
            <TextView
                android:id="@+id/txt_sr_dientich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="20m2"/>
        </LinearLayout>

        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <ImageView
                android:id="@+id/img_sr_diachi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:src="@drawable/ic_baseline_location_on_24"/>
            <TextView
                android:id="@+id/txt_sr_diach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:text="17/4, phường Linh Trung, Thủ Đức"/>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
