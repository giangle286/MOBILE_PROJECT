<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout tools:context=".activity_filter2" android:layout_margin="25dp" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bộ lọc tìm kiếm"
        android:textStyle="bold"
        android:padding="6dp"
        android:textSize="18sp"

        android:textAlignment="center"
        android:textColor="#555555" />

    <TextView
        android:id="@+id/txt_priceRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_text"
        android:layout_marginTop="30dp"
        android:padding="6dp"
        android:text="Giá"
        android:textColor="#555555"
        android:textStyle="bold"
        android:focusable="true"
        android:focusableInTouchMode="true"/>


    <Spinner
        android:id="@+id/spr_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txt_priceRoom"
        android:spinnerMode="dialog"/>

    <TextView
        android:id="@+id/txt_type"
        android:layout_width="match_parent"
        android:text="Loại hình cho thuê"
        android:layout_height="wrap_content"
        android:layout_below="@id/spr_price"
        android:layout_marginTop="30dp"
        android:padding="6dp"
        android:textStyle="bold"
        android:textColor="#555555"
        android:focusable="true"
        android:focusableInTouchMode="true"/>


    <Spinner
        android:id="@+id/spr_typeRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txt_type"
        android:spinnerMode="dialog"
        />

    <TextView
        android:id="@+id/txt_addressRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spr_typeRoom"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:padding="6dp"
        android:text="Địa điểm"
        android:textColor="#555555"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <Spinner
        android:id="@+id/spr_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txt_addressRoom"
        android:spinnerMode="dialog"/>

    <Button
        android:id="@+id/btn_filterSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spr_address"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Chọn"
        android:textAlignment="center" />



</RelativeLayout>